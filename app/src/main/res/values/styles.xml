<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTranlate</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="LoginBtnStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:background">@drawable/selector_login_btn</item>
    </style>

    <style name="InputKeyStyle">
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">13sp</item>
    </style>










    <!--old-->

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="TitleTextStyle">

        <!--android:alpha="0.7"-->
        <!--android:ellipsize="end"-->
        <!--android:maxLines="1"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="15sp"-->

        <item name="android:ellipsize">end</item>
        <item name="android:alpha">0.7</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SummaryTextStyle">
        <item name="android:alpha">0.5</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="DateTextStyle">
        <item name="android:alpha">0.7</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="RootCardStyle">
        <item name="android:layout_height">@dimen/rootCardHeight</item>
        <item name="android:layout_margin">5dp</item>

    </style>
</resources>
